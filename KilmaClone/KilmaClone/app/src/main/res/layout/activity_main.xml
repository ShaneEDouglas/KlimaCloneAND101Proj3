<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/purrtext"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:text="Purrrrfect Choice!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/paw"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="@id/paw"
        app:layout_constraintTop_toBottomOf="@id/paw"
        app:layout_constraintVertical_bias="0.033" />

    <TextView
        android:id="@+id/kittyfact"
        android:layout_width="279dp"
        android:layout_height="40dp"
        android:text="You have helped your fellow cats\n by doing the following: "
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="@+id/purrtext"
        app:layout_constraintStart_toStartOf="@+id/purrtext"
        app:layout_constraintTop_toBottomOf="@+id/purrtext" />

    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backbtn" />

    <ImageButton
        android:id="@+id/closbtn"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/xbtn"/>

    <ImageView
        android:id="@+id/paw"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:srcCompat="@drawable/catemoji"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.156" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/confirmbtn"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:text='Confirm'
        android:textStyle="bold"
        android:textColor="@color/white"
        android:background="@drawable/imgcircle"
        app:layout_constraintVertical_bias="1"
        app:layout_constraintTop_toBottomOf="@id/paw"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <TextView
        android:id="@+id/complete1"
        android:layout_width="238dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:text="Providing Play Time!"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/kittyfact"
        app:layout_constraintHorizontal_bias="2.0"
        app:layout_constraintStart_toStartOf="@id/kittyfact"
        app:layout_constraintTop_toBottomOf="@id/kittyfact" />

    <TextView
        android:id="@+id/complete2"
        android:layout_width="177dp"
        android:layout_height="26dp"
        android:layout_marginTop="60dp"
        android:text="Giving Food!"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/complete1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/complete1"
        app:layout_constraintTop_toBottomOf="@id/complete1" />

    <TextView
        android:id="@+id/complete3"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:layout_marginTop="60dp"
        android:text="Being Supportive!"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/complete2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/complete2"
        app:layout_constraintTop_toBottomOf="@id/complete2" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comp1img"
        android:layout_width="106dp"
        android:layout_height="87dp"
        app:layout_constraintBottom_toBottomOf="@id/complete1"
        app:layout_constraintEnd_toStartOf="@id/complete1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/complete1"
        android:src="@drawable/catplay"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/kilmagreen"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comp2img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/catfood1"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/kilmagreen"
        app:layout_constraintTop_toTopOf="@id/complete2"
        app:layout_constraintBottom_toBottomOf="@id/complete2"
        app:layout_constraintEnd_toStartOf="@id/complete2"
        app:layout_constraintStart_toStartOf="parent"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/checmark"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:elevation="20dp"
        android:src="@drawable/catpett"
        app:civ_border_color="@color/kilmagreen"
        app:civ_border_width="4dp"
        app:layout_constraintBottom_toBottomOf="@id/complete3"
        app:layout_constraintEnd_toStartOf="@id/complete3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/complete3" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/comp3img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/catpett"
        app:civ_border_width="4dp"
        app:civ_border_color="@color/kilmagreen"
        app:layout_constraintTop_toTopOf="@id/complete3"
        app:layout_constraintBottom_toBottomOf="@id/complete3"
        app:layout_constraintEnd_toStartOf="@id/complete3"
        app:layout_constraintStart_toStartOf="parent"/>





</androidx.constraintlayout.widget.ConstraintLayout>